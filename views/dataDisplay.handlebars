<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputSource">Source</label>
      <input type="text" class="form-control" id="inputIncomeSource">
    </div>
    <div class="form-group col-md-2">
      <label for="inputAmount">Amount</label>
      <input type="text" class="form-control" id="inputIncomeAmount">
    </div>
    <div class="form-group col-md-2">
      <button type="submit" class="btn btn-primary" id="newCategory">Add New Category</button>
    </div>
    <button type="submit" class="btn btn-primary" id="submitIncome">Submit</button>
  </div>
</form>


<h3>Income:</h3>
<ul id="income-list" class="list-group">
  {{#each income}}
  <li data-id="{{this.id}}" class="list-group-item">
    {{source}}
    {{amount}}
    <button class="btn btn-danger float-right delete">ï½˜</button>
  </li>
  {{/each}}
</ul>

