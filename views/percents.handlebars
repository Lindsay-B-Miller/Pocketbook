<div class="container" id="inputPB">
  <!-- Percents -->
  <br>
  <div class="row">
    <div class="col">
      <h2>Input the percent of your remaining income you would like to spend</h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <label>Percent allocated</label><br />
      <input type="number" id="inputPercentPercent" />
      <br><br>
      <label>Category (ex: groceries, eating out, shopping)</label><br />
      <input type="text" id="inputPercentSource" />
      <br>
      <br>
      <h5>Add new category</h5>
      <button type="button" class="btn btn-white" id="submitPercent">Add it here</button>
    </div>
  </div>
  <br>
  <br>
</div>


<h3>Categories:</h3>
<ul id="percents-list" class="list-group">
  {{#each percent}}
  <li data-id="{{this.id}}" class="list-group-item">
    {{source}}
    <span class="percentVal">{{percent}}</span>%
    <button class="btn btn-danger float-right delete">ï½˜</button>
  </li>
  {{/each}}
</ul>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/percents.js"></script>