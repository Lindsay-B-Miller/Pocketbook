<div class="homelogo" style="text-align: center;">
  <img src="/img/pocketbooklogo.png" style="height: 140px;">
  <div class="profileicon">
    <a href="/logout"><button type="button" class="btn btn-outline-light float-right">Sign out</button></a>
  </div>
</div>

<div class="container">
  <div class="welcome">
    <h1>Welcome back, {{firstName}}</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="dashleft">

        <div class="monthselect" style="text-align: center;">
          <h1>Budget Breakdown</h1>
        </div>


        <div class="chart">
          <div class="container">
            <canvas id="myChart" width="630" height="630"></canvas>
          </div>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="chartdata">

        <div class="datahead" style="text-align: center;">
          <h1>Monthly Budget</h1>
        </div>


        <div class="datainfo">

          <ul id="income-list" class="list-group">
            {{#each budget}}
            <li data-id="{{this.id}}" class="list-group-item">
              {{source}}
              ${{budget_allocated}}
            </li>
            {{/each}}
          </ul>


        </div>

      </div>
    </div>

    <div class="col-2">
      <div class="optionstab" style="text-align: center;">

        <div class="incomeicon">
          <a href="income">
            <input type="image" src="/img/INCOME.jpg" style="height: 130px; width: 130px;">
            <p>Income</p>
          </a>
        </div>

        <br>


        <div class="billsicon">
          <a href="bills">
            <input type="image" src="/img/BILLS.jpg" style="height: 140px; width: 148px;">
            <p>Bills</p>
          </a>
        </div>

        <br>


        <div class="percentsicon">
          <a href="percents">
            <input type="image" src="/img/PERCENT.png" style="height: 100px; width: 100px;">
            <p>Manage Budget</p>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/data.js"></script>
<script src="/js/chart.js"></script>