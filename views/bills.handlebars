</a>

<div class="break"></div>

    <br>

    <div class="container">
      <div class="row">
        <div class="formhead" style="margin: 0 auto;">
          <h2>Add Your Bills</h2>
        </div>
      </div>

      <br>

      <div class="wrap">

        <div class="cont" style="margin: 0 auto;">

          <div class="form">
            <!-- Income -->
            <div class="row">
              <div class="col"><label>Bill Amount</label><br />
                <input type="number" id="inputBillAmount" />
                <br>
                <br>
                <label>Bill Source</label><br />
                <input type="text" id="inputBillSource" />
                <br>
                <br>
                <h5>Have another bill?</h5>
                <button type="button" class="btn btn-white" id="submitBill" style="background-color: #0c53a9;
  color: white;">Add it here</button>
              </div>
            </div>
            <br>
            <br>
          </div>

          <div class="result" style="margin: 0 auto;">
          </div>

          <div class="container">
            <h3>Bills:</h3>

            <ul id="bills-list" class="list-group">
              {{#each bill}}
              <li data-id="{{this.id}}" class="list-group-item">
                {{source}}
                {{amount}}
                <button class="btn btn-danger float-right delete">ï½˜</button>
              </li>
              {{/each}}
            </ul>

          </div>
        </div>
      </div>
    </div>

